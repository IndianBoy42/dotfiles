set shell := ["fish", "-c"]
wd := invocation_directory()

@_default: 
    just -f {{justfile()}} -l

@edit:
    cd {{justfile_directory()}} && nvim {{justfile()}}

@new-lets name:
    cp {{justfile_directory()}}/template {{justfile_directory()}}/{{name}}.just
    nvim {{justfile_directory()}}/{{name}}.just

@config-nvim:
    cd ~/.config/nvim && $EDITOR init.lua

@config-fish:
    cd ~/.config/fish && $EDITOR config.fish

@config-edit:
    #!/usr/bin/env fish
    set chosen (yadm tracked ~ | fzf --preview='bat {}')
    test -n chosen && nvim $chosen

@qmk +command:
    #!/usr/bin/env fish
    test -n "{{command}}"
    and lets nix do "cd ~/qmk_firmware && nix-shell "qmk {{command}}""}
    or lets nix do "cd ~/qmk_firmware && nix-shell" 
